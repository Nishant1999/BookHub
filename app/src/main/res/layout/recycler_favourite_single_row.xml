<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="10dp"
    card_view:cardElevation="0dp"
    android:layout_margin="5dp"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeContent">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imgFavBook"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="#f5f5f5"
        android:src="@drawable/default_book_cover"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/txtFavBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFavBook"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="Name Of Book"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/txtFavBookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFavBookName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Android Inc."
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtFavBookPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFavBookAuthor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Android Inc."
        android:textColor="#357a38"/>

    <TextView
        android:id="@+id/txtFavBookRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFavBookPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_ratings"
        android:textColor="#ffca28"
        android:text="4.5"
        android:drawablePadding="4dp"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>
</androidx.cardview.widget.CardView>